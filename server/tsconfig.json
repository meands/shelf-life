{
    "extends": "../tsconfig.json",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"],
            "@types": ["types/index"],
            "@api/*": ["api/*"],
            "@middleware/*": ["middleware/*"],
            "@data/*": ["data/*"],
            "@utils/*": ["utils/*"]
        },
        "outDir": "../dist/server"
    },
    "include": ["**/*", "../shared/**/*"],
    "exclude": ["node_modules", "dist"]
  }